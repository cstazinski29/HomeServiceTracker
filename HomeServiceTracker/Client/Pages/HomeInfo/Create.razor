@using HomeServiceTracker.Shared.Models.HomeInfo
@using Microsoft.AspNetCore.Authorization
@inject HttpClient http
@inject NavigationManager navigation
@*commented out the authorization below for testing purposes, as I have not worked out the authorization yet*@
@*@attribute [Authorize]*@

@page "/HomeInfo/Create"

<h3>Create</h3>

@if (errorMessage != null)
{
    <h5 class="text-danger">@errorMessage</h5>
}

<div class="container">
    <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
        <div class="form-group">
            <label> Home Name</label>
            <InputText class="form-control" @bind-Value="model.HomeName" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-5">Submit</button>
        <DataAnnotationsValidator />
        <ValidationSummary />
    </EditForm>
</div>

@code {
    private HomeInfoCreate model = new();
    private string errorMessage;

    private async void HandleSubmit()
    {
        var createRes = await http.PostAsJsonAsync<HomeInfoCreate>("/api/homeInfo", model);
        if (createRes.IsSuccessStatusCode)
        {
            navigation.NavigateTo("/homeInfo");
        }
        else
        {
            errorMessage = "Could not create your home right now. Please try again later.";
        }
    }
}
